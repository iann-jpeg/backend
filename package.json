{
  "name": "exact-backend",
  "version": "1.0.0",
  "description": "Production-ready NestJS backend for insurance platform",
  "main": "dist/main.js",
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "start": "node dist/main.js",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "start:railway": "node dist/main.js",
    "build:prod": "prisma generate && nest build",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:prod": "prisma migrate deploy",
    "seed": "ts-node prisma/seed.ts",
    "postbuild": "prisma generate",
    "railway:deploy": "./scripts/deploy-railway.sh",
    "railway:setup": "npm install --production && npx prisma generate && npx prisma migrate deploy"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@prisma/client": "^6.14.0",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.0",
    "jspdf": "^3.0.1",
    "nodemailer": "^7.0.5",
    "pdfkit": "^0.17.1",
    "rate-limiter-flexible": "^2.4.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^7.0.0",
    "@types/pdfkit": "^0.17.2",
    "@types/socket.io": "^3.0.1",
    "@types/socket.io-client": "^1.4.36",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "prisma": "^6.14.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
